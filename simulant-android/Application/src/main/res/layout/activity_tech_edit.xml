<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample_main_layout">

    <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="NAME" />

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="right"
            android:text="" />
        <TextView
            android:background="@drawable/border"
            android:id="@+id/textViewValue"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="right"
            android:text="0.00" />
        <TextView
            android:id="@+id/textViewUnit"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="UNIT" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1mm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="right"
                android:text="I" />
            <TextView
                android:background="@drawable/border"
                android:id="@+id/textViewI"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="right"
                android:text="0.00" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="mA" />

        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1mm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="right"
            android:text="f" />
        <TextView
            android:background="@drawable/border"
            android:id="@+id/textViewF"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="right"
            android:text="0.00" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Hz" />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="1mm" />
    <View

        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="1mm" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewManualX"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="X [mA]" />

        <EditText
            android:id="@+id/editTextManualX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="numberDecimal"
            android:text="0.00" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="Y [UNIT]" />

        <EditText
            android:id="@+id/editTextManualY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="numberSigned|numberDecimal"
            android:text="0.00" />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="1mm" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewX0"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="X0 [mA]" />

        <EditText
            android:id="@+id/editTextX0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="numberDecimal"
            android:text="0.00" />

        <Button
            android:id="@+id/buttonGetIX0"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="I" />

        <Button
            android:id="@+id/buttonSetX0"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="4mA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewX1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="X1 [mA]" />

        <EditText
            android:id="@+id/editTextX1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonGetIX1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="I" />

        <Button
            android:id="@+id/buttonSetX1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="20mA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="Y0 [UNIT]" />

        <EditText
            android:id="@+id/editTextY0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="numberSigned|numberDecimal"
            android:text="0.00" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="4mA" />

        <TextView
            android:background="@drawable/border"
            android:id="@+id/textViewY0"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="20sp"
            android:gravity="right"
            android:text="0.00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="Y1 [UNIT]" />

        <EditText
            android:id="@+id/editTextY1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="numberSigned|numberDecimal"
            android:text="0.00" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="20mA" />

        <TextView
            android:background="@drawable/border"
            android:id="@+id/textViewY1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="20sp"
            android:gravity="right"
            android:text="0.00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:padding="6dp"
            android:textSize="16sp"
            android:gravity="right"
            android:text="UNIT" />

        <EditText
            android:id="@+id/editTextUnit"
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="wrap_content"
            android:text="" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE" />
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK" />

</LinearLayout>

</ScrollView>
